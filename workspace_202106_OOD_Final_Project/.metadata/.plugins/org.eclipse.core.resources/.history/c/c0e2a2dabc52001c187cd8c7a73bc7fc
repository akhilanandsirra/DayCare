package edu.neu.csye6200;

import java.util.Scanner;

public class Teacher extends Person{
private int credits;
private String id;
private Double salary;
private String track_Student_Record;


public int getCredits() {
	return credits;
}

public void setCredits(int credits) {
	this.credits = credits;
}

public Teacher(int age, String name, int credits) {
	super(age, name);
	this.credits = credits;
}

@Override
public String toString() {
	return "Teacher [credits=" + credits + "]";
}
public static Teacher createTeacherFromCSV(String std) {
	Scanner sn = new Scanner(std);
	sn.useDelimiter(",");
	Teacher tea = new Teacher(sn.nextInt(), sn.next(),sn.nextInt());
	sn.close();
	return tea;
	
}
}
