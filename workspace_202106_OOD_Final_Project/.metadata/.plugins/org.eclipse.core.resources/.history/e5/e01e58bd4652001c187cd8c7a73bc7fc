package edu.neu.csye6200;

import java.util.Scanner;

public class Student extends Person{

	private int grade;

	public int getGrade() {
		return grade;
	}

	public void setGrade(int grade) {
		this.grade = grade;
	}

	public Student(int age, String name, int grade) {
		super(age, name);
		this.grade = grade;
	}

	@Override
	public String toString() {
		return "Student " + super.toString() + grade ;
	}
	

	public static Student createStudentFromCSV(String std) {
		Scanner sn = new Scanner(std);
		sn.useDelimiter(",");
		Student st = new Student(sn.nextInt(), sn.next(),sn.nextInt());
		sn.close();
		return st;
	}
}
