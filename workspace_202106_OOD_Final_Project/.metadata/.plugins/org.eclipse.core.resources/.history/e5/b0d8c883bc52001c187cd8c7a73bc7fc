package edu.neu.csye6200;

import java.util.Scanner;

public class Student extends Person{

	private int grade;
	private String immunization_Records;
	
	

	public Student(int age, String name, String first_Name, String last_name, String date, String gender,
			EventRegistration eventRegistration, int grade, String immunization_Records) {
		super(age, name, first_Name, last_name, date, gender, eventRegistration);
		this.grade = grade;
		this.immunization_Records = immunization_Records;
	}



	public int getGrade() {
		return grade;
	}



	public void setGrade(int grade) {
		this.grade = grade;
	}



	public String getImmunization_Records() {
		return immunization_Records;
	}



	public void setImmunization_Records(String immunization_Records) {
		this.immunization_Records = immunization_Records;
	}



	public static Student createStudentFromCSV(String std) {
		Scanner sn = new Scanner(std);
		sn.useDelimiter(",");
		Student st = new Student(sn.nextInt(), sn.next(),std, std, std, std, eventRegistration, sn.nextInt(), std);
		sn.close();
		return st;
	}
}
