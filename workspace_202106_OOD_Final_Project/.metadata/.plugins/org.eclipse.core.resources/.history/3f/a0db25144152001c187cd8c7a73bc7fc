package edu.neu.csye6200;

public class StudentFactory{

	// singleton --. lazy single object creation
	//instance is created inside getinstance method 

		private static StudentFactory instance;

		private StudentFactory(){
		
		 // private constructor
		}
		//method to return instance of class
		public static StudentFactory getInstance()
		{
		 if (instance == null)
		 {
		   // if instance is null, initialize
		   instance = new StudentFactory();
		 }
		 return instance;
		}

		public Student getObject(String first_name, String last_name,int age, int student_id, double gpa) {
			
			return new Student(first_name, last_name, age, student_id, gpa);
		}
	}


